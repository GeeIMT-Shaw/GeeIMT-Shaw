<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292727"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#292727"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#252424"
                            android:text="@string/ex_1_1"
                            android:textColor="#F3F1F1"
                            android:textColorHint="#EAE9E9"
                            android:textColorLink="#E4DBDB"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/edit1"
                            android:layout_width="279dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#F3F0F0"
                            android:text="" />
                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#252424"
                            android:text="@string/ex_1_2"
                            android:textColor="#F3F1F1"
                            android:textColorHint="#EAE9E9"
                            android:textColorLink="#E4DBDB"
                            android:textSize="20sp" />

                        <CheckBox
                            android:id="@+id/choose_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#252424"
                            android:text="蜂窝"
                            android:textColor="#ECE8E8"
                            android:textSize="20sp"></CheckBox>

                        <CheckBox
                            android:id="@+id/choose_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#252424"
                            android:text="Wi-Fi"
                            android:textColor="#ECE8E8"
                            android:textSize="20sp"></CheckBox>
                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:padding="10dip"
                        android:text="@string/btn_1"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:padding="10dip"
                        android:text="@string/btn_2"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/backline_1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="10dip"
                android:background="#3477DC"
                android:padding="0dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#292727"
                    android:baselineAligned="false"
                    android:nestedScrollingEnabled="false">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dip">

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#1F3688"
                            android:text="@string/tip_1"
                            android:textColor="#F3F1F1"
                            android:textColorHint="#EAE9E9"
                            android:textColorLink="#E4DBDB"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AFAEAE"
                        android:padding="5dip">

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="114dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#252424"
                            android:padding="1dip"
                            android:text="@string/ex_2_3"
                            android:textColor="#F3F1F1"
                            android:textColorHint="#EAE9E9"
                            android:textColorLink="#E4DBDB"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/show_1"
                            android:layout_width="283dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="3dip"
                            android:background="#E4E4E4"
                            android:backgroundTint="#ECE8E8"
                            android:padding="1dip"
                            android:text=""
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AFAEAE"
                        android:padding="5dip">

                        <TextView
                            android:id="@+id/text12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#252424"
                            android:padding="1dip"
                            android:text="@string/ex_2_4"
                            android:textColor="#F3F1F1"
                            android:textColorHint="#EAE9E9"
                            android:textColorLink="#E4DBDB"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/show_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#E4E4E4"
                            android:backgroundTint="#ECE8E8"
                            android:padding="1dip"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AFAEAE"
                        android:padding="5dip">

                        <TextView
                            android:id="@+id/text7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#252424"
                            android:padding="1dip"
                            android:text="@string/ex_2_5"
                            android:textColor="#F3F1F1"
                            android:textColorHint="#EAE9E9"
                            android:textColorLink="#E4DBDB"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/show_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#E4E4E4"
                            android:backgroundTint="#ECE8E8"
                            android:padding="1dip"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dip">

                        <TextView
                            android:id="@+id/text8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#1F3688"
                            android:padding="1dip"
                            android:text="@string/tip_2"
                            android:textColor="#F3F1F1"
                            android:textColorHint="#EAE9E9"
                            android:textColorLink="#E4DBDB"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AFAEAE"
                        android:padding="5dip">

                        <TextView
                            android:id="@+id/text9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#252424"
                            android:padding="1dip"
                            android:text="@string/ex_2_6"
                            android:textColor="#F3F1F1"
                            android:textColorHint="#EAE9E9"
                            android:textColorLink="#E4DBDB"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/show_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#E4E4E4"
                            android:backgroundTint="#ECE8E8"
                            android:padding="1dip"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AFAEAE"
                        android:padding="5dip">

                        <TextView
                            android:id="@+id/text14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#252424"
                            android:padding="1dip"
                            android:text="@string/ex_2_8"
                            android:textColor="#F3F1F1"
                            android:textColorHint="#EAE9E9"
                            android:textColorLink="#E4DBDB"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/show_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#E4E4E4"
                            android:backgroundTint="#ECE8E8"
                            android:padding="1dip"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#AFAEAE"
                        android:padding="5dip">

                        <TextView
                            android:id="@+id/text13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#252424"
                            android:padding="1dip"
                            android:text="@string/ex_2_7"
                            android:textColor="#F3F1F1"
                            android:textColorHint="#EAE9E9"
                            android:textColorLink="#E4DBDB"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/show_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#E4E4E4"
                            android:backgroundTint="#ECE8E8"
                            android:padding="1dip"
                            android:textSize="20sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dip">

                        <TextView
                            android:id="@+id/text15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#1F3688"
                            android:padding="1dip"
                            android:text="@string/tip_3"
                            android:textColor="#F3F1F1"
                            android:textColorHint="#EAE9E9"
                            android:textColorLink="#E4DBDB"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AFAEAE"
                        android:padding="5dip">

                        <TextView
                            android:id="@+id/text16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#252424"
                            android:padding="1dip"
                            android:text="@string/ex_4_1"
                            android:textColor="#F3F1F1"
                            android:textColorHint="#EAE9E9"
                            android:textColorLink="#E4DBDB"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/show_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dip"
                            android:background="#E4E4E4"
                            android:backgroundTint="#ECE8E8"
                            android:padding="1dip"
                            android:textSize="20sp" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/backline_2"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_margin="10dip"
                    android:background="#3477DC"
                    android:padding="0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:padding="10dip"
                    android:text="@string/btn_3"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:padding="10dip"
                    android:text="@string/btn_4"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#AFAEAE"
                android:padding="3dip">

                <TextView
                    android:id="@+id/text10"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginRight="3dip"
                    android:background="#292727"
                    android:text="@string/ex_3_1"
                    android:textColor="#FAF9F9"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dip"
                    android:background="#DDDDDD"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#AFAEAE"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:background="#292727"
                    android:padding="3dip"
                    android:text="@string/ex_3_2"
                    android:textColor="#FAF9F9"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/show_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_weight="1"
                    android:background="#D6D2D2"
                    android:padding="3dip"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>